# --- Navigation & File Management ---
# Using exa (modern ls replacement with icons and git integration)
alias ls='exa --icons'
alias ll='exa -la --icons --git'
alias la='exa -A --icons'
alias l='exa --icons'
alias lt='exa -la --icons --git --sort=modified'  # Sort by date, newest first
alias lsize='exa -la --icons --sort=size'  # Sort by size
alias tree='exa --tree --icons'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~'
alias -- -='cd -'  # Go back to previous directory
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'
alias mkdir='mkdir -pv'
alias md='mkdir -pv'

# --- Enhanced Directory Navigation ---
alias desk='cd ~/Desktop'
alias docs='cd ~/Documents'
alias down='cd ~/Downloads'
alias pics='cd ~/Pictures'
alias vids='cd ~/Videos'
alias conf='cd ~/.config'
alias hyprconf='cd ~/.config/hypr'

# --- Pacman & AUR ---
alias pacu='sudo pacman -Syu'
alias paci='sudo pacman -S'
alias pacs='pacman -Ss'
alias pacinfo='pacman -Qi'
alias pacrem='sudo pacman -Rns'
alias ins='yay -S'
alias uns='yay -Rns'
alias cleanup='sudo pacman -Rns $(pacman -Qtdq) 2>/dev/null || echo "No orphaned packages"'
alias unlock='sudo rm /var/lib/pacman/db.lck'
alias mirror='sudo reflector --latest 20 --protocol https --sort rate --save /etc/pacman.d/mirrorlist'
alias orphans='pacman -Qtd'  # Show orphaned packages
alias pkglist='pacman -Qq | fzf --preview "pacman -Qil {}" --layout=reverse --bind "enter:execute(pacman -Qil {} | less)"'

# --- System Info & Monitoring ---
alias df='df -h'
alias du='du -h'
alias duh='du -h --max-depth=1 | sort -h'  # Disk usage of current dir
alias free='free -mt'
alias psa='ps auxf'
alias psg='ps aux | grep -v grep | grep -i -e VSZ -e'  # Search processes
alias mem='ps auxf | sort -nr -k 4 | head -10'  # Top 10 memory eaters
alias cpu='ps auxf | sort -nr -k 3 | head -10'  # Top 10 CPU eaters
alias ff='fastfetch'
alias weather='curl wttr.in'
alias ports='netstat -tulanp'
alias myip='curl ifconfig.me'
alias localip='ip addr show | grep "inet " | grep -v 127.0.0.1'
alias listening='lsof -P -i -n | grep LISTEN'

# === GIT POWER ALIASES ===
# LazyGit TUI
alias lg='lazygit'

# Quick status
alias g='git'
alias gs='git status'
alias gss='git status -s'
alias gst='git status'

# Logs (enhanced!)
alias gl='git log --oneline --graph --decorate -10'
alias gla='git log --oneline --graph --decorate --all'
alias gll='git log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit'
alias glog='git log --oneline --decorate --graph --all'

# Add and commit
alias ga='git add'
alias gaa='git add --all'
alias gc='git commit -m'
alias gca='git commit --amend'
alias gcam='git commit -am'  # Add all and commit

# Push and pull
alias gp='git push'
alias gpl='git pull'
alias gf='git fetch'

# Branches
alias gb='git branch'
alias gba='git branch -a'
alias gbd='git branch -d'
alias gbD='git branch -D'  # Force delete
alias gco='git checkout'
alias gcb='git checkout -b'
alias gcm='git checkout main'

# Diff and show
alias gd='git diff'
alias gds='git diff --staged'
alias gdp='git diff HEAD~1'  # Diff with previous commit
alias gsh='git show'

# Stash
alias gst='git stash'
alias gstp='git stash pop'
alias gstl='git stash list'
alias gstd='git stash drop'

# Undo/Reset (use carefully!)
alias gundo='git reset HEAD~1'
alias gunstage='git reset HEAD'
alias greset='git reset --hard'
alias gclean='git clean -fd'

# Clone
alias gcl='git clone'

# Quick dotfiles management
alias dotfiles='cd ~/dotfiles'
alias dotsave='cd ~/dotfiles && git add . && git commit -m "Update configs" && git push && cd -'
alias dotpull='cd ~/dotfiles && git pull && cd -'
alias dotlog='cd ~/dotfiles && git log --oneline --graph --decorate -10'

# --- FZF Shortcuts ---
alias fzf-file='fzf'
alias fzf-dir='fd --type d | fzf'
alias fzf-history='history | fzf'
alias fzf-git='git ls-files | fzf'
alias fzffiles='fd --type f | fzf'
alias fcd='cd $(fd --type d | fzf)'  # Fuzzy cd

# --- LazyVim & Neovim ---
alias v='nvim'
alias vi='nvim'
alias vim='nvim'
alias nv='nvim'
alias svi='sudo nvim'
alias lazyvim-update='nvim --headless "+Lazy! sync" +qa'
alias lazyvim-clean='rm -rf ~/.local/share/nvim ~/.local/state/nvim ~/.cache/nvim'
alias nvim-config='cd ~/.config/nvim && nvim .'

# --- Yazi File Manager ---
alias y='yazi'
alias yy='yazi'
alias fm='yazi'

# --- Quick Config Editing ---
alias nb='$EDITOR ~/.bashrc'
alias na='$EDITOR ~/.bashrc_aliases'
alias nhypr='$EDITOR ~/.config/hypr/hyprland.conf'
alias nmonitors='$EDITOR ~/.config/hypr/monitors.conf'
alias nbindings='$EDITOR ~/.config/hypr/bindings.conf'
alias nautostart='$EDITOR ~/.config/hypr/autostart.conf'
alias nlooknfeel='$EDITOR ~/.config/hypr/looknfeel.conf'
alias nwindows='$EDITOR ~/.config/hypr/windows.conf'
alias nwaybar='$EDITOR ~/.config/waybar/config.jsonc'
alias nwaybar-style='$EDITOR ~/.config/waybar/style.css'
alias nalacritty='$EDITOR ~/.config/alacritty/alacritty.toml'
alias nyazi='$EDITOR ~/.config/yazi/yazi.toml'
alias npacman='sudo $EDITOR /etc/pacman.conf'

# --- Workspaces / Apps ---
alias term='$TERMINAL --working-directory="$PWD"'
alias brave='omarchy-launch-browser'
alias brave-private='omarchy-launch-browser --private'
alias files='uwsm-app -- nautilus --new-window'
alias signal='omarchy-launch-or-focus signal "uwsm-app -- signal-desktop"'
alias chatgpt='omarchy-launch-webapp "https://chatgpt.com"'
alias claude='omarchy-launch-webapp "https://claude.ai"'
alias grok='omarchy-launch-webapp "https://grok.com"'
