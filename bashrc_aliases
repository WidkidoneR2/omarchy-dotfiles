alias xpost='omarchy-launch-webapp "https://x.com/compose/post"'
alias youtube='omarchy-launch-webapp "https://youtube.com"'
alias gmail='omarchy-launch-webapp "https://gmail.com"'

# --- Power Controls ---
alias ssn='sudo shutdown now'
alias sr='sudo reboot'
alias logout='hyprctl dispatch exit'
alias suspend='systemctl suspend'
alias hibernate='systemctl hibernate'

# --- Waybar Controls ---
alias waybar-restart='killall waybar && setsid -f waybar'
alias waybar-reload='killall waybar && setsid -f waybar'

# --- Hyprland Controls ---
alias hypr-reload='hyprctl reload'
alias hypr-info='hyprctl clients'
alias hypr-windows='hyprctl clients | grep "class:"'

# --- Useful Shortcuts ---
alias c='clear'
alias h='history'
alias hg='history | grep'  # Search history
alias j='jobs -l'
alias now='date +"%T"'
alias nowdate='date +"%d-%m-%Y"'
alias timestamp='date +"%Y%m%d_%H%M%S"'
alias reload='source ~/.bashrc'
alias path='echo -e ${PATH//:/\\n}'  # Pretty print PATH
alias please='sudo $(history -p !!)'  # Run last command with sudo
alias fucking='sudo'  # Alternative sudo ðŸ˜„

# --- File Operations ---
alias chx='chmod +x'  # Make file executable
alias extract='tar -xvf'  # Extract tar files
alias targz='tar -czvf'  # Create tar.gz
alias untar='tar -xvf'

# --- Find & Search ---
alias findf='find . -type f -name'  # Find files by name (old method)
alias findd='find . -type d -name'  # Find directories by name (old method)
alias search='fd'  # Modern file search (fd tool)
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# --- Network ---
alias pingg='ping google.com'
alias wifilist='nmcli device wifi list'
alias wificonnect='nmcli device wifi connect'

# --- Quick System Maintenance ---
alias update-all='yay -Syu && flatpak update -y'
alias clean-all='yay -Sc && yay -Rns $(yay -Qtdq) 2>/dev/null'
alias clean-cache='yay -Scc && sudo pacman -Scc'
alias fix-keys='sudo pacman-key --init && sudo pacman-key --populate archlinux'

# --- Modern CLI Tools ---
# bat - Better cat with syntax highlighting
alias cat='bat --paging=never'
alias catp='bat'  # bat with paging for long files
alias catt='bat --style=plain'  # Plain output, no line numbers

# fzf - Fuzzy finder integrations
alias vf='v $(fzf)'  # Fuzzy find and edit with nvim
alias ef='nvim $(fzf)'  # Alternative fuzzy edit
alias preview='fzf --preview "bat --color=always {}"'  # Preview files with bat

# --- LazyVim Cheat Sheet ---
alias cheat='nvim ~/.config/nvim/lazyvim-cheatsheet.md'
alias vimcheat='nvim ~/.config/nvim/lazyvim-cheatsheet.md'

# --- Fun Stuff ---
alias matrix='cmatrix -abs'  # Matrix effect (if installed)
alias starwars='telnet towel.blinkenlights.nl'  # Star Wars in terminal

# --- Grep Shortcuts ---
alias find-alias='grep_alias() { cat ~/.bashrc_aliases | grep "$@"; }; grep_alias'
alias find-bind='grep_bind() { cat ~/.config/hypr/bindings.conf | grep "$@"; }; grep_bind'
alias find-workspace='grep_workspace() { cat ~/.config/hypr/windows.conf | grep workspace | grep "$@"; }; grep_workspace'
alias my-processes='ps aux | grep $USER'

# --- Mullvad VPN ---
alias vpn-up='sudo wg-quick up mullvad'
alias vpn-down='sudo wg-quick down mullvad'
alias vpn-status='sudo wg show'
alias vpn-ip='curl ifconfig.me'
alias vpn-check='echo "VPN Status:" && sudo wg show && echo "" && echo "Your IP:" && curl -s ifconfig.me && echo ""'
